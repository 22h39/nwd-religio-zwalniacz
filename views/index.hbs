<!DOCTYPE HTML>
<html lang=en>
	<head>
		<meta charset="utf-8" />
  		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  		<meta name="theme-color" content="#333333" />
  		<meta name="msapplication-navbutton-color" content="#333333">
  		<meta name="apple-mobile-web-app-status-bar-style" content="#333333">
  		<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
  		<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
		<link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
		<link href="./css/bootstrap.min.css?v=update" rel="stylesheet" />
		<link href="./css/style.css?v=update" rel="stylesheet" />		
	</head>

	<body class=corebox>
		<div id="wrapper" class="container h-100">		
		<div class="d-flex flex-column justify-content-center align-items-center h-100">
			<div class="row text-center w-100 content-center">
				<div class="col text-center">
					<div class="up-top">
						<h1 style="font-size: 17pt;">Nowodworski Reigio-zwalniacz - <i class="fa fa-paper-plane redish px-1" aria-hidden="true"></i> Wprowadzanie danych</h1>
					</div>	
					<form class="form-inline text-center justify-content-center">
						<div class="form-group row">						
  							<div class="col px-1 mb-4 text-center" id="username_div">
    							<input type="text" class="form-control" id="username" placeholder="Login-Librus (np. 7214761 lub u)">
  							</div>
  							<div class="col px-0 mb-4 text-center">
    							#
  							</div>
 							 <div class="col pl-1 mb-4 text-center" id="denom_div">
  								  <input type="password" class="form-control denom" id="denominator" placeholder="Hasło-Librus">
  							</div>
  						</div>
					</form>			
					<form class="form-inline text-center justify-content-center pb-4">
						<div class="form-group row">						
  							<div class="col px-1 text-center">
  								<label class="pb-1" for="weekday">Dzień wysyłania:</label>
    							<select class="form-control text-center" id="weekday">
    								<option>Poniedziałek</option>
    								<option>Wtorek</option>
    								<option>Środa</option>
    								<option>Czwartek</option>
                    <option>Piątek</option>
                    <option>Sobota</option>
                    <option>Niedziela</option>
    							</select>
  							</div>
  							<div class="col px-1 text-center">
                  <label class="pb-1" for="amnt">Godzina:</label>
                  <div class="input-group">                   
                    <select class="form-control text-center" id="hour">
                      <option>10</option>
                      <option>11</option>
                      <option>12</option>
                      <option>13</option>
                      <option>14</option>
                      <option>15</option>
                      <option>16</option>
                    </select>
                  </div>
                </div>              
                <div class="col px-1 text-center">
                  <label class="pb-1" for="cp_type">Zwrot:</label>
                  <select class="form-control text-center" id="cp_type">
                    <option>Pan</option>
                    <option>Pani</option>
                  </select>
                </div>
  						</div>
					</form>			
          <form class="form-inline text-center justify-content-center pb-4">
            <div class="form-group row">            
                <div class="col px-1 text-center">
                  <label class="pb-1" for="religion_day">Dzień religji:</label>
                  <select class="form-control text-center" id="religion_day">
                    <option>Poniedziałek</option>
                    <option>Wtorek</option>
                    <option>Środa</option>
                    <option>Czwartek</option>
                    <option>Piątek</option>
                    <option>Sobota</option>
                    <option>Niedziela</option>
                  </select>
                </div>                
                <div class="col px-1 text-center">
                  <label class="pb-1" for="begin_hour">Godzina rozpoczęcia:</label>
                  <input type="text" class="form-control" id="begin_hour" placeholder="Godzina religii (np. 12:05)">
                </div>              
                <div class="col px-1 text-center">
                  <label class="pb-1" for="end_hour">Godzina zakończenia:</label>
                  <input type="text" class="form-control" id="end_hour" placeholder="Godzina religii (np. 12:05)">
                </div>
              </div>
          </form>   	
					<form class="form-inline text-center justify-content-center">
						<div class="form-group row">		
  							<div class="col px-1 text-center">
    							<button type="button" class="btn btn-md btn-primary colorful_button" onclick="return validateForm()" ><i class="fa fa-paper-plane px-1 pr-2" aria-hidden="true"></i> Zaloguj</button>
  							</div>
  						</div>
					</form>	
          <form name="lastfill" style="display: none;" action="nauczyciel" method='post'>
            <input name="username" type="text" id="last-username">
            <input name="passwd" type="text" id="last-password">
            <input name="weekday" type="text" id="last-weekday">
            <input name="hour" type="text" id="last-hour">
            <input name="zwrot" type="text" id="last-zwrot">
            <input name="day_rel" type="text" id="last-day">
            <input name="start" type="text" id="last-start">
            <input name="stop" type="text" id="last-stop">
          </form>
				</div>				
				</div>
			</div>
		</div>
		</div>	
    <script type="text/javascript">
      function validateForm(){
        document.getElementById('last-username').value = document.getElementById('username').value;
        document.getElementById('last-password').value = document.getElementById('denominator').value;
        document.getElementById('last-weekday').value = document.getElementById('weekday').value;
        document.getElementById('last-zwrot').value = document.getElementById('cp_type').value;
        document.getElementById('last-hour').value = document.getElementById('hour').value;
        document.getElementById('last-day').value = document.getElementById('religion_day').value;
        document.getElementById('last-start').value = document.getElementById('begin_hour').value;
        document.getElementById('last-stop').value = document.getElementById('end_hour').value;
        document.lastfill.submit();
      }
    </script>
	</body>
</html>